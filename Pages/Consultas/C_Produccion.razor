@page "/C_Produccion"

@inject ProducidoBLL producido
<PageTitle>Consulta Productos.</PageTitle>

<RadzenDataGrid AllowFiltering="true" AllowColumnResize="true" AllowAlternatingRows="false" FilterMode="FilterMode.Advanced"
    AllowGrouping="true" AllowSorting="true" AllowPaging="true" PagerHorizontalAlign="HorizontalAlign.Left"
    Data="L_Producido" TItem="Producido" ColumnWidth="300px" LogicalFilterOperator="LogicalFilterOperator.Or" ShowPagingSummary="true">

        <Columns>
            
            <RadzenDataGridColumn TItem="Producido" Property="ProducidoId" Title="ProducidoId"/>
            <RadzenDataGridColumn TItem="Producido" Property="Concepto" Title="Concepto"/>
            <RadzenDataGridColumn TItem="Producido" Property="Fecha" Title="Fecha"/>
            


        </Columns>

    </RadzenDataGrid>


@code
{
    public List<Producido> L_Producido {get; set;} = new List<Producido>();

        protected override void OnInitialized()
        {
            L_Producido = producido.GetList();
        }
}


