@page "/C_Productos"

@inject ProductoBLL productos
<PageTitle>Consulta Productos.</PageTitle>

<RadzenDataGrid AllowFiltering="true" AllowColumnResize="true" AllowAlternatingRows="false" FilterMode="FilterMode.Advanced"
    AllowGrouping="true" AllowSorting="true" AllowPaging="true" PagerHorizontalAlign="HorizontalAlign.Left"
    Data= "L_Productos" TItem="Producto" ColumnWidth="300px" LogicalFilterOperator="LogicalFilterOperator.Or" ShowPagingSummary="true">

        <Columns>
            
            <RadzenDataGridColumn TItem="Producto" Property="ProductoId" Title="ProductoId#"/>
            <RadzenDataGridColumn TItem="Producto" Property="Descripcion" Title="Descripcion"/>
            <RadzenDataGridColumn TItem="Producto" Property="Costo" Title="Costo"/>
            <RadzenDataGridColumn TItem="Producto" Property="Precio" Title="Precio"/>
            <RadzenDataGridColumn TItem="Producto" Property="Existencia" Title="Existencia"/>
            


        </Columns>

    </RadzenDataGrid>



@code
{
    public List<Producto> L_Productos {get; set;} = new List<Producto>();

        protected override void OnInitialized()
        {
            L_Productos = productos.GetList();
        }
}

